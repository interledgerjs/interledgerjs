{
  "name": "@interledger/interledgerjs",
  "version": "1.0.0",
  "description": "Interledger.JS Monorepo",
  "repository": "https://github.com/interledgerjs/interledgerjs",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "keywords": [
    "ilp",
    "interledger"
  ],
  "author": "Interledger Team <info@interledger.org>",
  "bugs": {
    "url": "https://github.com/interledgerjs/interledgerjs/issues"
  },
  "homepage": "https://github.com/interledgerjs/interledgerjs#readme",
  "scripts": {
    "clean": "yarn clean:artifacts && yarn clean:packages && yarn clean:root",
    "clean:artifacts": "lerna run clean --parallel",
    "clean:packages": "lerna clean --yes",
    "clean:root": "rimraf node_modules",
    "codecov": "lerna run codecov",
    "cover": "lerna run cover --concurrency=1 --stream",
    "build": "lerna run build --sort --concurrency=1 --stream",
    "test": "lerna run test --concurrency=1 --stream",
    "test:quick": "lerna run test --parallel",
    "publish:release": "lerna publish from-git --yes",
    "lint": "eslint --cache --cache-location node_modules/.cache/eslint",
    "lint:all": "yarn lint 'packages/*/src/**/*.ts*'",
    "prettier::all": "yarn prettier --write 'packages/*/src/**/*.{js,ts}*'",
    "lint:staged": "lint-staged",
    "version": "yarn && git add yarn.lock",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts*": [
      "yarn lint --fix"
    ]
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "test"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/chai": "^4.3.1",
    "@types/chai-as-promised": "^7.1.5",
    "@types/long": "^4.0.2",
    "@types/node": "^17.0.31",
    "@types/sinon": "^10.0.11",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "chai": "^4.3.6",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.8.2",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.0.0",
    "eslint-plugin-n": "^15.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-standard": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "lerna": "^6.0.0",
    "lint-staged": "^12.4.1",
    "mocha": "^10.0.0",
    "mocha-typescript": "^1.1.17",
    "nyc": "^15.1.0",
    "prettier": "2.6.2",
    "prettier-standard": "^16.4.1",
    "rimraf": "^3.0.2",
    "sinon": "^15.0.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.1",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4"
  }
}
