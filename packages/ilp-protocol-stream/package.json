{
  "name": "ilp-protocol-stream",
  "version": "1.8.4",
  "description": "Interledger Transport Protocol for sending multiple streams of money and data over ILP.",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src/**/*.js",
    "src/**/*.js.map",
    "src/**/*.d.ts"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "tsc",
    "lint": "tslint --project .",
    "test": "nyc mocha",
    "doc": "typedoc --options typedoc.js src/index.ts src/connection.ts src/stream.ts",
    "publish-docs": "npm run doc && node scripts/publish-docs.js",
    "codecov": "codecov"
  },
  "keywords": [
    "interledger",
    "ilp",
    "streaming",
    "payments",
    "micropayments",
    "chunked"
  ],
  "author": "Evan Schwartz <evan@ripple.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/interledgerjs/ilp-protocol-stream.git"
  },
  "dependencies": {
    "@types/node": "^10.7.1",
    "bignumber.js": "^7.2.1",
    "debug": "^4.0.0",
    "ilp-logger": "^1.1.2",
    "ilp-packet": "^3.0.0",
    "ilp-protocol-ildcp": "^2.0.0",
    "oer-utils": "^3.0.1",
    "source-map-support": "^0.5.6"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/chai-as-promised": "^7.1.0",
    "@types/debug": "0.0.30",
    "@types/lolex": "^2.1.2",
    "@types/mocha": "^5.2.5",
    "@types/sinon": "^5.0.1",
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "codecov": "^3.0.2",
    "gh-pages": "^1.2.0",
    "ilp-plugin": "^3.2.1",
    "ilp-plugin-btp": "^1.2.1",
    "mocha": "^5.1.1",
    "mocha-typescript": "^1.1.14",
    "nyc": "^12.0.2",
    "sinon": "^6.0.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^8.0.0",
    "typedoc": "^0.12.0",
    "typescript": "^3.0.1"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 80,
    "statements": 80,
    "functions": 80,
    "branches": 80,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "test/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "all": true
  }
}
